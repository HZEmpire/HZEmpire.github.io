    "itemTypes": {
        "news": {
            "requiredKeys": [
                "date",
                "content"
            ],
            "template": "list-inline"
        },
        "publication": {
            "requiredKeys": [
                "title",
                "conference",
                "authors",
                "description",
                "links",
                "image"
            ],
            "template": "paper-card",
            "templateOptions": {
                "mediaField": "image",
                "titleField": "title",
                "subtitleFields": [
                    "conference"
                ],
                "metaFields": [
                    "authors",
                    "date"
                ],
                "descriptionFields": [
                    "description",
                    "abstract",
                    "content"
                ],
                "detailsField": "highlights",
                "tagsField": "tags",
                "placeholderLabel": "Publication Preview"
            }
        },
        "project": {
            "requiredKeys": [
                "title",
                "date",
                "authors",
                "description",
                "links",
                "image"
            ],
            "template": "paper-card",
            "templateOptions": {
                "mediaField": "image",
                "titleField": "title",
                "subtitleFields": [
                    "date"
                ],
                "metaFields": [
                    "authors"
                ],
                "descriptionFields": [
                    "description",
                    "summary",
                    "content"
                ],
                "detailsField": "stack",
                "tagsField": "tags",
                "placeholderLabel": "Project Preview"
            }
        },
        "blog": {
            "requiredKeys": [
                "title",
                "date",
                "content",
                "links",
                "image"
            ],
            "template": "paper-card",
            "templateOptions": {
                "mediaField": "image",
                "titleField": "title",
                "subtitleFields": [
                    "subtitle"
                ],
                "metaFields": [
                    "post_time",
                    "author"
                ],
                "badgeFields": [],
                "badgeSeparator": " · ",
                "descriptionFields": [
                    "summary",
                    "excerpt",
                    "description",
                    "content"
                ],
                "tagsField": "tags",
                "placeholderLabel": "Media Placeholder",
                "primaryLink": {
                    "type": "blogSlug"
                },
                "actions": [
                    {
                        "type": "readMore",
                        "label": {
                            "en": "Read more",
                            "zh": "阅读全文",
                            "jp": "続きを読む"
                        }
                    }
                ]
            }
        },
        "timeline": {
            "requiredKeys": [
                "date",
                "title",
                "org",
                "description"
            ],
            "template": "timeline"
        }
    },
